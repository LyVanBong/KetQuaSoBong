                              BackgroundColor="Gray"
                              ColumnDefinitions="60,*"
                              RowDefinitions="40,*"
                              RowSpacing="1"
                              ColumnSpacing="1">
                        <Label Text="Đầu"
                                FontFamily="RBo"
                                TextColor="Black"
                                HorizontalOptions="Fill"
                                HeightRequest="40"
                                   Grid.Column="0"       
                                   Grid.Row="0"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"
                                FontSize="16"
                                   Margin="1,1,0,0"
                                BackgroundColor="{StaticResource placeholderColor}"/>
