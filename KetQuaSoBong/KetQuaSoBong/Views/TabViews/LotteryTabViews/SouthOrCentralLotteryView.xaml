                                   FontSize="13" />
                            </StackLayout>
                        </RadioButton.Content>
                        <RadioButton.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Lottery.ChangeDisplayNumberCommand}" CommandParameter="{x:Reference rd3Num}"/>
                        </RadioButton.GestureRecognizers>
                    </RadioButton>
                    <StackLayout Orientation="Horizontal"
