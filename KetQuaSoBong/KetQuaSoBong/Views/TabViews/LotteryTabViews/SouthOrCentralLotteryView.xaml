                            <GridItemsLayout Orientation="Vertical"
                                             Span="{Binding Lottery.Datas.Count}"
                                             HorizontalItemSpacing="1"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="md:Data">
                                <StackLayout Spacing="1">
                                    <Label Text="{Binding TenTinhThanh}"
                                               FontFamily="RBo"
                                               TextColor="CornflowerBlue"
                                           TextDecorations="Underline"
                                               HorizontalTextAlignment="Center"
                                               VerticalTextAlignment="Center"
                                               FontSize="14"
                                               Grid.Column="0"
                                           HeightRequest="45"
                                               BackgroundColor="{StaticResource placeholderColor}"/>
                                       
                                    <!--G8-->

                                    <Label Text="{Binding StrG8}"
                                            FontFamily="RBo"
                                            TextColor="Black"
                                            HorizontalTextAlignment="Center"
                                            VerticalTextAlignment="Center"
                                            FontSize="16"
                                            HeightRequest="45"
                                            BackgroundColor="White"/>

                                    <!--G7-->

                                    <Label Text="{Binding StrG71}"
                                            FontFamily="RBo"
                                            TextColor="Black"
                                            HorizontalTextAlignment="Center"
                                            VerticalTextAlignment="Center"
                                            FontSize="16"
                                            HeightRequest="45"
                                            BackgroundColor="{StaticResource placeholderColor}"/>

                                    <!--G6-->
                                    <StackLayout Spacing="1"
                                                 BackgroundColor="White">
                                        <Label Text="{Binding StrG61}"
                                                FontFamily="RBo"
                                                TextColor="Black"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                FontSize="16"
                                                HeightRequest="45"/>
                                        <Label Text="{Binding StrG62}"
                                                FontFamily="RBo"
                                                TextColor="Black"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                FontSize="16"
                                                HeightRequest="45"/>
                                        <Label Text="{Binding StrG63}"
                                                FontFamily="RBo"
                                                TextColor="Black"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                FontSize="16"
                                                HeightRequest="45"/>
                                    </StackLayout>

                                    <!--G5-->

                                    <Label Text="{Binding StrG51}"
                                            FontFamily="RBo"
                                            TextColor="Black"
                                            HorizontalTextAlignment="Center"
                                            VerticalTextAlignment="Center"
                                            FontSize="16"
                                            HeightRequest="45"
                                            BackgroundColor="{StaticResource placeholderColor}"/>

                                    <!--G4-->
                                    <StackLayout Spacing="1"
                                                 BackgroundColor="White">
                                        <Label Text="{Binding StrG41}"
                                                FontFamily="RBo"
                                                TextColor="Black"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                FontSize="16"
                                                HeightRequest="45"/>
                                        <Label Text="{Binding StrG42}"
                                                FontFamily="RBo"
                                                TextColor="Black"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                FontSize="16"
                                                HeightRequest="45"/>
                                        <Label Text="{Binding StrG43}"
                                                FontFamily="RBo"
                                                TextColor="Black"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                FontSize="16"
                                                HeightRequest="45"/>
                                        <Label Text="{Binding StrG44}"
                                                FontFamily="RBo"
                                                TextColor="Black"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                FontSize="16"
                                                HeightRequest="45"/>
                                        <Label Text="{Binding StrG45}"
                                                FontFamily="RBo"
                                                TextColor="Black"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                FontSize="16"
                                                HeightRequest="45"/>
                                        <Label Text="{Binding StrG46}"
                                                FontFamily="RBo"
                                                TextColor="Black"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                FontSize="16"
                                                HeightRequest="45"/>
                                        <Label Text="{Binding StrG47}"
                                                FontFamily="RBo"
                                                TextColor="Black"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                FontSize="16"
                                                HeightRequest="45"/>
                                    </StackLayout>

                                    <!--G3-->
                                    <StackLayout Spacing="1"
                                                 BackgroundColor="{StaticResource placeholderColor}">
                                        <Label Text="{Binding StrG31}"
                                                FontFamily="RBo"
                                                TextColor="Black"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                FontSize="16"
                                                HeightRequest="45"/>
                                        <Label Text="{Binding StrG32}"
                                                FontFamily="RBo"
                                                TextColor="Black"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                FontSize="16"
                                                HeightRequest="45"/>
                                    </StackLayout>

                                    <!--G2-->

                                    <Label Text="{Binding StrG21}"
                                            FontFamily="RBo"
                                            TextColor="Black"
                                            HorizontalTextAlignment="Center"
                                            VerticalTextAlignment="Center"
                                            FontSize="16"
                                            HeightRequest="45"
                                            BackgroundColor="White"/>

                                    <!--G1-->

                                    <Label Text="{Binding StrG1}"
                                            FontFamily="RBo"
                                            TextColor="Black"
                                            HorizontalTextAlignment="Center"
                                            VerticalTextAlignment="Center"
                                            FontSize="16"
                                            HeightRequest="45"
                                            BackgroundColor="{StaticResource placeholderColor}"/>

                                    <!--DB-->

                                    <Label Text="{Binding StrDacBiet}"
                                            FontFamily="RBo"
                                            TextColor="{StaticResource primaryColor}"
                                            HorizontalTextAlignment="Center"
                                            VerticalTextAlignment="Center"
                                            FontSize="16"
                                            HeightRequest="50"
                                            BackgroundColor="White"/>

                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
                
            </Grid>
            <StackLayout IsVisible="{Binding IsShowMore}">
                <StackLayout Orientation="Horizontal"
                                     Padding="5"
                                     Grid.Row="2"
                                     BackgroundColor="Red"
                                     Spacing="0"
                             Margin="5,0"
                         IsVisible="{Binding Lottery.IsLoading}">
                    <RadioButton x:Name="rdAllNum"
                                         ClassId="AllNum"
                                         ControlTemplate="{StaticResource RadioButton}"
                                         IsChecked="True">
                        <RadioButton.Content>
                            <StackLayout Orientation="Horizontal">
                                <Image Source="{StaticResource Uncheck}"
                                               WidthRequest="13"
                                               HeightRequest="13"
                                               HorizontalOptions="Start">
                                    <Image.Triggers>
                                        <DataTrigger TargetType="Image" Binding="{Binding Source={x:Reference rdAllNum}, Path=IsChecked}" Value="True">
                                            <Setter Property="Source" Value="{StaticResource Checked}" />
                                        </DataTrigger>
                                    </Image.Triggers>
                                </Image>
                                <Label Text="Đầy đủ"
                                               TextColor="White"
                                               FontFamily="RM"
                                               Margin="0,2,0,0"
                                               FontSize="13" />
                            </StackLayout>
                        </RadioButton.Content>
                        <RadioButton.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Lottery.ChangeDisplayNumberCommand}" CommandParameter="{x:Reference rdAllNum}"/>
                        </RadioButton.GestureRecognizers>
                    </RadioButton>
                    <RadioButton x:Name="rd2Num"
