                                    <ViewCell>
                                        <Label Text="{Binding .}"
                                               FontFamily="RBo"
                                               TextColor="{StaticResource primaryColor}"
                                               HorizontalOptions="Fill"
                                               HeightRequest="40"
                                               HorizontalTextAlignment="Center"
                                               VerticalTextAlignment="Center"
                                               FontSize="16"
                                               BackgroundColor="White"/>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <CollectionView ItemsSource="{Binding Lottery.Datas}"
                                    Grid.Column="1"
                                    Grid.RowSpan="2"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="Fill"
                                    Margin="0,1,1,1"
                                    HeightRequest="452">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical"
                                             Span="{Binding Lottery.Datas.Count}"
                                             HorizontalItemSpacing="1"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="md:Data">
                                    <Grid RowDefinitions="39,*"
                                             HeightRequest="443"
                                      RowSpacing="1">
                                        <Label Text="{Binding TenTinhThanh}"
                                               FontFamily="RBo"
                                               TextColor="CornflowerBlue"
                                           TextDecorations="Underline"
                                               HorizontalTextAlignment="Center"
                                               VerticalTextAlignment="Center"
                                               FontSize="14"
                                               Grid.Column="0"
                                           HeightRequest="39"
                                               BackgroundColor="{StaticResource placeholderColor}"/>
                                        <ListView ItemsSource="{Binding LastNum}"
                                          
                                            Grid.Row="1"
                                      RowHeight="40"
                                      SeparatorColor="Gray"
                                      SelectionMode="None"
                                      IsEnabled="False"
                                      >

                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="x:String">
                                                    <ViewCell>
                                                        <Label Text="{Binding .}"
                                               FontFamily="RBo"
                                               TextColor="Black"
                                               HorizontalOptions="Fill"
                                               HeightRequest="40"
                                               HorizontalTextAlignment="Start"
                                               VerticalTextAlignment="Center"
                                               Padding="10,0,0,0"
                                               FontSize="16"
                                               BackgroundColor="White"/>
                                                    </ViewCell>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Grid>

