                                   Grid.Row="7"
                                   Grid.ColumnSpan="4"
                                   VerticalOptions="FillAndExpand"
                                   HorizontalOptions="FillAndExpand" />
                        <forms:AnimationView
                                   Animation="loading.json"
                                   BackgroundColor="{StaticResource placeholderColor}"
