                                            <Setter Property="Source" Value="{StaticResource Checked}" />
                                        </DataTrigger>
                                    </Image.Triggers>
                                </Image>
                                <Label Text="2 số"
                                   TextColor="White"
                                   FontFamily="RM"
                                   Margin="0,2,0,0"
                                   FontSize="13" />
                            </StackLayout>
                        </RadioButton.Content>
                        <RadioButton.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Lottery.ChangeDisplayNumberCommand}" CommandParameter="{x:Reference rd2Num}"/>
                        </RadioButton.GestureRecognizers>
                    </RadioButton>
                    <RadioButton x:Name="rd3Num"
                                         ClassId="3Num"
                                         ControlTemplate="{StaticResource RadioButton}">
                        <RadioButton.Content>
                            <StackLayout Orientation="Horizontal">
                                <Image Source="{StaticResource Uncheck}"
                                               WidthRequest="13"
                                               HeightRequest="13"
                                               HorizontalOptions="Start">
                                    <Image.Triggers>
                                        <DataTrigger TargetType="Image" Binding="{Binding Source={x:Reference rd3Num}, Path=IsChecked}" Value="True">
                                            <Setter Property="Source" Value="{StaticResource Checked}" />
                                        </DataTrigger>
