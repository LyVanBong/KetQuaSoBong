       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
       xmlns:md="clr-namespace:KetQuaSoBong.Models"
       xmlns:footballtabviews="clr-namespace:KetQuaSoBong.Views.TabViews.FootballTabViews"
       x:Class="KetQuaSoBong.Views.TabViews.FootballTabViews.UpdateScoreView"
       x:DataType="footballtabviews:UpdateScoreViewVM"

             Padding="0">
    <Frame.Resources>
        <ResourceDictionary>
            <xct:ImageResource Id="KetQuaSoBong.Resources.Images.ic_nc_premier.png" x:Key="PL" />
            <xct:ImageResource Id="KetQuaSoBong.Resources.Images.ic_nc_laliga.png" x:Key="Laliga" />
            <xct:ImageResource Id="KetQuaSoBong.Resources.Images.ic_nc_serieA.png" x:Key="SerieA" />
            <xct:ImageResource Id="KetQuaSoBong.Resources.Images.ic_nc_league1.png" x:Key="League1" />
            <xct:ImageResource Id="KetQuaSoBong.Resources.Images.ic_nc_bunesliga.png" x:Key="Bunesliga" />
