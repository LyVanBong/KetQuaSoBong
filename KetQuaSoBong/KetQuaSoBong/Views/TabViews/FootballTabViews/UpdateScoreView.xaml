        <StackLayout
            Spacing="0"
            Padding="0,0,0,10">
            <StackLayout Orientation="Horizontal"
                         BackgroundColor="Gold"
                         HeightRequest="50">
                <Label Text="TỶ SỐ CẬP NHẬT"
                 Margin="10"
                       FontSize="16"
                       HorizontalOptions="CenterAndExpand"
                       TextColor="White"
                       VerticalOptions="Center"
                 FontFamily="RB" />
            </StackLayout>
            <StackLayout Spacing="0">
                <BoxView HeightRequest="0.5"
                         Color="LightGray" />
                <StackLayout Orientation="Horizontal"
                             Margin="12,0,10,0"
                         HeightRequest="50">
                    <Image Source="{StaticResource PL}"
                           WidthRequest="50"
                           HeightRequest="50" />
                    <Label Text="Ngoại hạng Anh"
                           Margin="10"
                           FontSize="14"
                           HorizontalOptions="Start"
                           TextColor="Black"
                           VerticalOptions="Center"
                           FontFamily="RBo" />
                    <Label Text="{Binding PremierScores.Count, StringFormat='({0})'}"
                           HorizontalOptions="EndAndExpand"
                           VerticalOptions="Center"
                           TextColor="Black"
                           FontFamily="RB" />
                    <Image Source="{StaticResource IconUp}"
                           WidthRequest="15"
                           HeightRequest="15"
                           Margin="0,2,0,0"
                           HorizontalOptions="End"
                           VerticalOptions="Center">
                        <Image.Triggers>
                            <DataTrigger TargetType="Image" Binding="{Binding Source={x:Reference layoutPremier}, Path=IsVisible}" Value="False">
                                <Setter Property="Source" Value="{StaticResource IconDown}" />
                            </DataTrigger>
                        </Image.Triggers>
                    </Image>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowHideLayoutCommand}" CommandParameter="{x:Reference layoutPremier}" />
                    </StackLayout.GestureRecognizers>
                </StackLayout>

                <BoxView HeightRequest="0.5"
                         Color="LightGray" />
