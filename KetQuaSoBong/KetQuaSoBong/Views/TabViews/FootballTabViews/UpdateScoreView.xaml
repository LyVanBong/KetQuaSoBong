                             Spacing="0"
                             x:Name="layoutPremier">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="md:Match">
                            <Frame HeightRequest="80"
                                   Margin="10,5"
                                   Padding="0"
                                   HasShadow="False"
                                   CornerRadius="5"
                                   BackgroundColor="{StaticResource placeholderColor}">
                                <Grid ColumnDefinitions="*,60,*"
                                      ColumnSpacing="0">
                                    <StackLayout Grid.Column="0"
                                     Orientation="Vertical"
                                     HorizontalOptions="EndAndExpand"
                                     VerticalOptions="Center"
                                     Spacing="5"
                                     WidthRequest="120">

                                        <Image Source="{Binding Team1.Logo}"
                                   HeightRequest="40"
                                   WidthRequest="40"
                                   HorizontalOptions="Center" />
                                        <Label Text="{Binding Team1.Name}"

                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   FontFamily="RM" />
                                    </StackLayout>
                                    <StackLayout Grid.Column="1"
                               VerticalOptions="Center"
                                     Spacing="3">
                                        <Label FontSize="15"
                                   FontFamily="RBo"
                                   VerticalOptions="Center"
                                   TextColor='Black'
                                   HorizontalTextAlignment="Center">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding PointT1}" />
                                                    <Span Text=" - " />
                                                    <Span Text="{Binding PointT2}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label
                                Text="{Binding NoteMatch}"
                               FontSize="13"
                               FontFamily="RI"
                               HorizontalTextAlignment="Center">
                                        </Label>
                                    </StackLayout>

                                    <StackLayout Grid.Column="2"
                                     Orientation="Vertical"
                                     HorizontalOptions="StartAndExpand"
                                     VerticalOptions="Center"
                                     Spacing="5"
                                     WidthRequest="120">

                                        <Image Source="{Binding Team2.Logo}"
                                   HeightRequest="40"
                                   WidthRequest="40"
                                   HorizontalOptions="Center" />
                                        <Label Text="{Binding Team2.Name}"

                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   FontFamily="RM" />
                                    </StackLayout>
                                </Grid>
                            </Frame>
